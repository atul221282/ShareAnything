<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SharePost.View.Account.Login">

  <ScrollView x:Name="scrollView" VerticalOptions="FillAndExpand" Orientation="Vertical">
    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
    
      
      <StackLayout  Padding="20" Spacing="10" VerticalOptions="CenterAndExpand" Orientation="Vertical">
          <ActivityIndicator IsVisible="{Binding IsLoading}" IsRunning="{Binding IsLoading}"/>
        <Entry x:Name="enEmail" Placeholder="Email" Text="{Binding UserName}"></Entry>
        <Entry x:Name="enPassword" IsPassword="True" Text="{Binding Password}" Placeholder="Password"></Entry>
        <Button Text="Login" Clicked="OnClicked_btnLogin" x:Name="btnLogin" IsEnabled="{Binding !IsLoading}"></Button>
        <Button Text="Register" Clicked="OnClicked_btnRegister" x:Name="btnRegister"></Button>
      </StackLayout>

    </StackLayout>




  </ScrollView>


</ContentPage>