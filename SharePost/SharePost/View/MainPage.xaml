<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" x:Name="cpMain"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SharePost.View.MainPage">

  <StackLayout Padding="30">
    <Label Text="Posts" FontSize="20"></Label>

    <ListView x:Name="postList" ItemsSource="{Binding Posts}" ItemTapped="postList_OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.View>
              <StackLayout Padding="10">
                <StackLayout Orientation="Horizontal">
                  <Label Text="{Binding Name}" FontSize="14" FontAttributes="Bold" TextColor="Blue">
                  </Label>
                </StackLayout>
              </StackLayout>
            </ViewCell.View>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>
